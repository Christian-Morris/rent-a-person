<div class="bg-image vh-100">
  <div class="container">
    <div class="filter">
    <div class="filter-form">
    <h3>Match up for your next event</h3>
      <%= form_with model: @user, url: users_path, method: :get do |form| %>
        <%= form.select :location, ["bali", "UK", "Denmark", "Anywhere"], {include_blank: "Location"}, { class: "w-50 p-3" } %>
        <br>
        <%= form.select :age, ['18-25', '25-40', '40-60', '60+', "All ages"] , {include_blank: "Age"}, { class: "w-50 p-3" } %>
        <br>
        <%= form.select :occasion, Occasion.all.map { |o| o.name } , {include_blank: "Event"}, { class: "w-50 p-3" }%>
        <br>
        <%= form.select :gender, ['male', 'female', 'All genders'] , {include_blank: "Gender"}, { class: "w-50 p-3" } %>
        <br>

        <label for="start_date"></label>
        <input class="w-50 p-3" type="date" id="start_date" name="start_date">
        <br>

        <%= form.submit 'Submit', { class: "btn btn-primary btn-lg btn-block" } %>
      <% end %>

    </div>
  </div>

  <%= link_to "filter user", users_path %>
</div>
